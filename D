// ==UserScript==
// @name         Lichess Bot (stockfish8)
// @description  Fully automated lichess bot
// @author       Nuro
// @match        *://lichess.org/*
// @run-at       document-start
// @grant        none
// @require      https://raw.githubusercontent.com/workinworld/stkfish/refs/heads/main/stockfish8.js
// ==/UserScript==

let chessEngine;
let currentFen = "";
let bestMove;
let webSocketWrapper = null;
let gameId = null;
let isWhite = true;
let timeLimitMs = 100;  // Slightly increased time limit for slightly better analysis

function initializeChessEngine() {
    chessEngine = window.STOCKFISH();
    // Set engine options for a balance between speed and analysis
    chessEngine.postMessage("setoption name Skill Level value 5"); // Lower skill level might favor safer moves
    chessEngine.postMessage("setoption name Hash value 16");      // Increase hash size for slightly better performance
    chessEngine.postMessage("setoption name Threads value 1");     // Use only 1 thread for speed
}

function interceptWebSocket() {
    let webSocket = window.WebSocket;
    const webSocketProxy = new Proxy(webSocket, {
        construct: function (target, args) {
            let wrappedWebSocket = new target(...args);
            webSocketWrapper = wrappedWebSocket;

            wrappedWebSocket.addEventListener("message", function (event) {
                let message = JSON.parse(event.data);
                console.log(message);

                if (message.type === "gameFull" && message.id) {
                    gameId = message.id;
                    isWhite = message.white.id === lichess.socket.settings.userId;
                    console.log("Game ID:", gameId);
                    console.log("Playing as white:", isWhite);
                }

                if (message.d && typeof message.d.fen === "string" && typeof message.v === "number") {
                    currentFen = message.d.fen;
                    let isWhitesTurn = message.v % 2 === 0;
                    currentFen += isWhitesTurn ? " w" : " b";

                    calculateMove();
                }

                if (message.type === "gameState" && message.status >= 30) {
                    handleGameEnd();
                }
            });
            return wrappedWebSocket;
        }
    });

    window.WebSocket = webSocketProxy;
}

function calculateMove() {
    chessEngine.postMessage("position fen " + currentFen);
    // Increased search depth if possible, balanced with time limits
    chessEngine.postMessage(`go depth 3 movetime ${timeLimitMs}`); //Depth 3 would be ideal for more accurate moves
    // chessEngine.postMessage(`go depth 1`); // Uncomment for depth 1 for immediate moves
}

function setupChessEngineOnMessage() {
    chessEngine.onmessage = function (event) {
        if (event && event.includes("bestmove")) {
            bestMove = event.split(" ")[1];
            webSocketWrapper.send(JSON.stringify({
                t: "move",
                d: { u: bestMove, b: 1, l: 10000, a: 1 }
            }));
        }
    };
}

initializeChessEngine();
interceptWebSocket();
setupChessEngineOnMessage();
